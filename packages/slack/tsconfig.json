{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
